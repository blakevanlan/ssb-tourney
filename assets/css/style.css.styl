.container
   padding: 0 20px 20px 20px

span.success
   color: #5bb75b
   font-weight: bold
   
span.failure
   color: #da4f49
   font-weight: bold

.bracket-column
   width: 20%
   float: left
   
   &.one
      .bracket-entry
         height: 36px
         span.na
         .player
            padding-top: 14px
   &.two
      .bracket-entry
         height: 73px
         &:first-child
            margin-top: -18px
         span.na
         .player
            padding-top: 51px
   &.three
      .bracket-entry
         height: 147px
         &:first-child
            margin-top: -53px
         span.na
         .player
            padding-top: 125px
   &.four
      .bracket-entry
         height: 294px
         &:first-child
            margin-top: -126px
         span.na
         .player
            padding-top: 272px
   &.five
      .bracket-entry
         height: 318px
         span.na
         .player
            padding-top: 296px
            
.bracket-entry
   position: relative
   border-bottom: 1px solid #333
   &:nth-child(even)
      border-right: 1px solid #333
   span.na
   .player
      display: block
      padding-left: 5px
      padding-right: 5px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
   span.na
      color: #666
      
   .match-outcome
      display: block
      position: absolute
      top: 50%
      right: -6px
      margin-top: -6px
      height: 8px
      width: 8px
      border: 2px solid #333
      border-radius: 8px 
      background-color: #fff
      z-index: 1000
      &.complete
         border: 2px solid #222
         background-color: #333
      
      
.tournamentNew-page
   select
      width: 200px
      
.capitalize
   text-transform: capitalize
   
h1.title a
   color: #333
   
